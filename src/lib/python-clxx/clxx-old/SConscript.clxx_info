Import(['env'])

from SCons.Util import CLVar

# "Generate" __init__.py
init_py = env.Substfile(['info/__init__.py.in'], SUBST_DICT = {})
# Generate python modules with swig
libs = env.get('SWIGPY_LIBS', CLVar()) + [
    'clxx_info'
]
overrides = {
    'SWIGPY_LIBS'       : libs
}
modules = [
    'platform_info_mod',
]
# Build modules
modfiles = env.SwigPyModule(modules, **overrides)
instfiles =  [m for m in modfiles if not str(m).endswith('.cc')] + init_py


# FIXME: this is only for now, elaborate what should be the destination path,
#        also the python packages should be compiled when installed, later on
#        a plain user can't do this (root owns the directory with installed
#        *.py files)
instfiles2 = env.Install('${libdir}/python/dist-packages/clxx_/info', instfiles)
env.Ignore("${INSTALL_SANDBOX}${libdir}/python/dist-packages/clxx_/info", instfiles2)
env.Alias('install-python-clxx',instfiles2)
env.Alias('install', 'install-python-clxx')

SConscript('info/_ldr_/SConscript', exports = ['env'])

