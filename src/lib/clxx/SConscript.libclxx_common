Import('env')

from SCons.Util import CLVar, NodeList
import os

headers = [
    #
    # common/*.hpp
    #
    'common/auto_bind.hpp',
    'common/clerror.hpp',
    'common/clerror_base.hpp',
    'common/clerror_no.hpp',
    'common/config.hpp',
    'common/current_instance.hpp',
    'common/exception.hpp',
    'common/exception_base.hpp',
    'common/exceptions.hpp',
    'common/macros.hpp',
    'common/memoized_function.hpp',
    'common/ndrange.hpp',
    'common/ndrange_fwd.hpp',
    'common/opencl.h',
    'common/program_binaries.hpp',
    'common/program_binary.hpp',
    'common/program_source.hpp',
    'common/program_sources.hpp',
    'common/shared_ptr.hpp',
    'common/to_string.hpp',
    'common/types.hpp',
    'config.h',
    #
    # common/detail/*.hpp
    #
    'common/detail/clerror_stdexcept.hpp',
    'common/detail/context_property_type.hpp',
    'common/detail/context_property_type_fwd.hpp',
    'common/detail/current_instance.hpp',
    'common/detail/device_partition_property_type.hpp',
    'common/detail/device_partition_property_type_fwd.hpp',
    'common/detail/enum2cstr.hpp',
    'common/detail/enum2hex.hpp',
    'common/detail/enum2name.hpp',
    'common/detail/locale.hpp',
    'common/detail/path.hpp',
    'common/detail/search_path.hpp',
    'common/detail/sha1.hpp',
    'common/detail/std_except_ctor_arg.hpp',
    'common/detail/std_except_ctor_arg_fwd.hpp',
]

env['CLXX_PACKAGES']['libclxx_common'] = {
    'version' : env.subst('$CLXX_VERSION'),
    'libdeps' : CLVar()
}

iheaders = NodeList()
for header in headers:
    [head, tail] = os.path.split(header)
    idir = os.path.join(env.subst("${includedir}"), "clxx", head);
    iheader = env.Install(idir, header)
    env.Ignore(idir, iheader)
    iheaders += iheader

env.Alias('install-libclxx_common-headers', iheaders)
env.Alias('install-libclxx_common-dev', ['install-libclxx_common-headers' ])
env.Alias('install','install-libclxx_common-dev')

