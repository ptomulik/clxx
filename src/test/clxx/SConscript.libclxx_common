env.CxxTest('../check-libclxx_common', tests,
           LIBS = CLVar(),
           CXXTEST_CPPPATH = ['..'],
           CXXTEST_LIBPATH = env.get('LIBPATH', CLVar()),
           CXXTEST_TARGET = 'check-libclxx_common')

env.Alias('check', [ 'check-libclxx_common' ])
env.AlwaysBuild('check-libclxx_common')

