Import(['env'])

from SCons.Util import CLVar

tests = [
    #'b3c.t.h',
    'b3c/clobj.t.h',
    'b3c/clobj_fcn.t.h',
    'b3c/command_queue.t.h',
    'b3c/context.t.h',
    'b3c/context_properties.t.h',
    'b3c/context_property.t.h',
##    'b3c/device.t.h',
    'b3c/device_partition.t.h',
    'b3c/device_partition_properties.t.h',
    'b3c/device_partition_property.t.h',
    'b3c/devices.t.h',
    'b3c/event.t.h',
    'b3c/events.t.h',
    'b3c/kernel.t.h',
    'b3c/kernel_fcn.t.h',
    'b3c/mem.t.h',
    'b3c/mem_fcn.t.h',
##    'b3c/platform.t.h',
##    'b3c/platform_layer.t.h',
    'b3c/platforms.t.h',
    'b3c/program.t.h',
    'b3c/program_fcn.t.h',
]

env.CxxTest('../check-libclxx_b3c', tests,
           LIBS = CLVar('clxx_b3c_test clxx_b5d_test clxx_info'),
           CXXTEST_CPPPATH = ['..'],
           CXXTEST_LIBPATH = env.get('LIBPATH', CLVar()),
           CXXTEST_TARGET = 'check-libclxx_b3c')

env.Alias('check', [ 'check-libclxx_b3c' ])
env.AlwaysBuild('check-libclxx_b3c')

