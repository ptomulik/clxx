Import('conf')

env = conf.env

# Prefer locally installed cxxtest headers
if env.Dir('#ext/cxxtest').exists():
    env.AppendUnique(CPPPATH = ['#ext/cxxtest'])
    env['CXXTEST_INSTALL_DIR'] = '#ext/cxxtest'

env.Tool('cxxtest')

